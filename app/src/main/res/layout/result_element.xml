<?xml version="1.0" encoding="utf-8"?>


<!--suppress AndroidLintUseCompoundDrawables, AndroidLintContentDescription -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:layout_gravity="fill"
    android:orientation="horizontal"
    android:id="@+id/list_element">

    <ImageView android:id="@+id/image"
        android:layout_width="60dip"
        android:layout_height="60dip"

        android:layout_toLeftOf="@+id/list_element_goal_images_codes"
        android:paddingRight="5dip"
        android:layout_gravity="center"
        android:layout_marginLeft="3dp" android:layout_marginTop="3dp"
        android:layout_marginRight="3dp" android:layout_marginBottom="3dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.55">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:textStyle="bold"
            android:text="Title"
            android:textSize="20dip"
            android:layout_above="@+id/list_element_goal_period"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="1"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp" />

    </LinearLayout>

</LinearLayout>